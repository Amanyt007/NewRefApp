@model NewRefApp.Data.DTOs.InvestmentPlanViewModel;

@{
    ViewData["Title"] = "Create Investment Plan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <h2>Create Investment Plan</h2>
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="RevenueDurationValue"></label>
                    <input asp-for="RevenueDurationValue" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="VipLevel"></label>
                    <input asp-for="VipLevel" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="DailyEarningsPerUnit"></label>
                    <input asp-for="DailyEarningsPerUnit" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="HourlyEarningsPerUnit"></label>
                    <input asp-for="HourlyEarningsPerUnit" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="InvestmentAmount"></label>
                    <input asp-for="InvestmentAmount" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">Upload Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}