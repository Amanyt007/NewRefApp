@model NewRefApp.Data.DTOs.InvestmentPlanViewModel;

@{
    ViewData["Title"] = "Edit Investment Plan";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <h2>Edit Investment Plan</h2>
    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Category"></label>
                    <input asp-for="Category" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="RevenueDurationValue"></label>
                    <input asp-for="RevenueDurationValue" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="VipLevel"></label>
                    <input asp-for="VipLevel" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="DailyEarningsPerUnit"></label>
                    <input asp-for="DailyEarningsPerUnit" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="HourlyEarningsPerUnit"></label>
                    <input asp-for="HourlyEarningsPerUnit" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="InvestmentAmount"></label>
                    <input asp-for="InvestmentAmount" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ImageFile">Upload New Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control" />
                </div>
                @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                {
                    <div class="mb-3">
                        <label>Existing Image:</label>
                        <br />
                        <img src="@Model.ExistingImagePath" width="100" />
                    </div>
                }
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}