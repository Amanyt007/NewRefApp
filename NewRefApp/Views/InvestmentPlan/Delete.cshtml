@model InvestmentPlan

@{
    ViewData["Title"] = "Delete Investment Plan";
}

<div class="container mt-4">
    <div class="card bg-dark text-white p-3 mb-3">
        <h5>Delete Investment Plan</h5>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="card bg-secondary text-white p-3">
        <h4>Are you sure you want to delete this?</h4>
        <div>
            <dl class="row">
                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Model.Name</dd>
                <dt class="col-sm-2">Category</dt>
                <dd class="col-sm-10">@Model.Category</dd>
                <dt class="col-sm-2">Investment Amount</dt>
                <dd class="col-sm-10">₹@Model.InvestmentAmount</dd>
                <dt class="col-sm-2">Created At</dt>
                <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>