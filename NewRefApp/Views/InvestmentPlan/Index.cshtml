@model IEnumerable<InvestmentPlan>
@{
    ViewData["Title"] = "Investment Plans";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-4">
    <h2>Investment Plans</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Plan</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Amount</th>
                <th>VIP</th>
                <th>Duration</th>
                <th>Daily Earning</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>@plan.Name</td>
                    <td>@plan.Category</td>
                    <td>@plan.InvestmentAmount</td>
                    <td>@plan.VipLevel</td>
                    <td>@plan.RevenueDurationValue</td>
                    <td>@plan.DailyEarningsPerUnit</td>
                    <td>
                        @if (!string.IsNullOrEmpty(plan.ImagePath))
                        {
                            <img src="@plan.ImagePath" width="100" />
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@plan.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>