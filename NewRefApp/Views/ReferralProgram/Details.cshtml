@model ReferralProgram

@{
    ViewData["Title"] = "Referral Program Details";
}

<div class="container mt-4">
    <div class="card bg-dark text-white p-3 mb-3">
        <h5>Referral Program Details</h5>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>

    <div class="card bg-secondary text-white p-3">
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>
            <dt class="col-sm-2">Level</dt>
            <dd class="col-sm-10">@Model.Level</dd>
            <dt class="col-sm-2">Percentage</dt>
            <dd class="col-sm-10">@Model.Percent%</dd>
        </dl>
    </div>
</div>