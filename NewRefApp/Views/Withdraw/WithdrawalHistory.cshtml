@model IEnumerable<Withdraw>

@{
    ViewData["Title"] = "Withdrawal History";
}

<div class="container mt-4">
    <div class="card bg-dark text-white p-3 mb-3">
        <h5>Withdrawal History</h5>
    </div>

    <div class="card bg-secondary text-white p-3">
        @if (Model.Any())
        {
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Amount</th>
                        <th>Payment Type</th>
                        <th>UPI ID</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>₹@item.Amount</td>
                            <td>@(item.PaymentType == 0 ? "UPI" : "BankTransfer")</td>
                            <td>@(item.PaymentType == 0 ? item.UpiDetail?.UpiId ?? "N/A" : "N/A")</td>
                            <td>@(item.Status == 0 ? "Pending" : item.Status == 1 ? "Completed" : "Failed")</td>
                            <td>@item.Date.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-warning">No withdrawal history found.</p>
        }
    </div>
</div>