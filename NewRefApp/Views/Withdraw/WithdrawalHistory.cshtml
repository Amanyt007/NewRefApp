@model IEnumerable<Withdraw>

@{
    ViewData["Title"] = "Withdrawal History";
}
<div class="container-fluid p-0">
    <div class="card bg-pink-gradient text-center text-white p-3 h1">
        Withdrawal History
    </div>
</div>
<div class="container mt-4">
   @*  <div class="card bg-dark text-white p-3 mb-3">
        <h5>Withdrawal History</h5>
    </div> *@

    <div class="recharge-card color-darkBlue p-3">
        @if (Model.Any())
        {
            <table class="table table-info table-bordered color-darkBlue font-11">
                <thead>
                    <tr>
                     @*    <th>ID</th> *@
                        <th>Amount</th>
                        <th>Received Money</th>
                        <th>Transaction Charges</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @* <td>@item.Id</td> *@
                            <td>₹@item.Amount</td>
                            <td>₹@((item.Amount * 0.9m).ToString("0.00"))</td>
                            <td>₹@((item.Amount * 0.1m).ToString("0.00"))</td>
                            <td>@(item.Status == 0 ? "Pending" : item.Status == 1 ? "Completed" : "Failed")</td>
                            <td>@item.Date.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-warning">No withdrawal history found.</p>
        }
    </div>
</div>