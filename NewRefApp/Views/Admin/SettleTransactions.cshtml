@model IEnumerable<Deposit>

@{
    ViewData["Title"] = "Settle Transactions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<div class="container mt-4">
    <div class="card bg-dark text-white p-3 mb-3">
        <h5>Transaction Settlement</h5>
    </div>

    <div class="card bg-secondary text-white p-3">
    <h4>Transactions</h4>

    <!-- Filter Form -->
    <form method="get" asp-action="SettleTransactions" class="d-flex mb-3">
        <!-- Status Filter -->
        <select name="statusFilter" class="form-select w-25 me-2" asp-items="ViewBag.StatusOptions" onchange="this.form.submit()"></select>

        <!-- Phone Search -->
        <input type="text" name="phoneSearch" value="@ViewBag.PhoneSearch" class="form-control w-50 me-2" placeholder="Search by phone" />

        <button type="submit" class="btn btn-primary">Search</button>
        @* <a asp-action="SettleTransactions" class="btn btn-outline-light ms-2">Reset</a> *@
    </form>
    <div class="overflow-auto">
    @if (Model.Any())
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User Name</th>
                    <th>Phone</th>
                    <th>Amount</th>
                    <th>Payment Type</th>
                    <th>UTR Number</th>
                    <th>Account ID</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.User?.FullName</td>
                        <td>@item.User?.PhoneNumber</td>
                        <td>₹@item.Amount</td>
                        <td>@(item.PaymentType == 0 ? "UPI" : "Bank Transfer")</td>
                        <td>@item.UtrNumber</td>
                        <td>@item.AdminAccountID</td>
                        <td>@item.Date.ToString("dd/MM/yyyy HH:mm:ss")</td>
                        <td>
                            @(item.Status == 0 ? "Pending" :
                              item.Status == 1 ? "Done" :
                              "Failed")
                        </td>
                        <td>
                            @if (item.Status == 0)  
                            {
                                <button class="btn btn-success btn-sm approve-btn" data-id="@item.Id" data-action="approve">Approve</button>
                                <button class="btn btn-danger btn-sm cancel-btn" data-id="@item.Id" data-action="cancel">Cancel</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-warning">No transactions found.</p>
    }
    </div>
</div>
</div>

<!-- Modal for Confirmation -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirm Action</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage">Are you sure you want to perform this action?</p>
                <input type="hidden" id="actionId" />
                <input type="hidden" id="actionType" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            $('.approve-btn, .cancel-btn').on('click', function () {
                const id = $(this).data('id');
                const action = $(this).data('action');
                const message = action === 'approve' ? 'Are you sure you want to approve this transaction?' : 'Are you sure you want to cancel this transaction?';
                $('#actionId').val(id);
                $('#actionType').val(action);
                $('#confirmMessage').text(message);
                $('#confirmModal').modal('show');
            });

            $('#confirmBtn').on('click', function () {
                const id = $('#actionId').val();
                const action = $('#actionType').val();
                $.ajax({
                    url: action === 'approve' ? '/Admin/ApproveTransaction' : '/Admin/CancelTransaction',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error: ' + error);
                    }
                });
                $('#confirmModal').modal('hide');
            });
        });
    </script>
}

