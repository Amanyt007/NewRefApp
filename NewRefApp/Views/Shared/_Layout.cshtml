@{
    var isLoggedIn = ViewBag.IsLoggedIn as bool? ?? false;
    var phoneNumber = ViewBag.PhoneNumber as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewRefApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewRefApp.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NewRefApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                        @{
                            if (ViewBag.isLoggedIn == false)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" id="register" asp-area="" asp-controller="Authorization" asp-action="Register">Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" id="login" asp-area="" asp-controller="Authorization" asp-action="Login">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="MyInvestments">My Investments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Referrals">Referrals</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="InvestmentPlans">Investment Plans</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Recharge">Recharge</a>
                                </li>
                                // <li class="nav-item">
                                //     <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Transactions">Transaction Details</a>
                // </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Account">Account</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark cursor-pointer" id="logout">Log Out</a>
                                </li>
                            }
                        }

                        @*  <li class="nav-item">
                        <button class="btn btn-success" id="loggedDone">Logged In</button>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div class="modal fade" id="loaderModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content text-center py-4 bg-transparent" style="border:none;">
                    <div class="modal-body">
                        <div class="spinner-border text-primary text-white" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NewRefApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            function getCookie(name) {
                const value = `; ${document.cookie}`;
                const parts = value.split(`; ${name}=`);
                if (parts.length === 2) return parts.pop().split(';').shift();
                return null;
            }

            // if (getCookie("rareentUser")) {
            //     $("#register").hide();
            //     $("#login").hide();
            // }

            // Logout click handler
            $("#logout").click(function (e) {
                e.preventDefault();

                // Remove 'rareentAdmin' from sessionStorage
                sessionStorage.removeItem("rareentUser");

                // Remove the 'rareentAdmin' and 'findUser' cookies


                // Send a POST request to the /admin/api/Logout endpoint to handle server-side logout
                $.post("/Home/Logout", function (response) {
                    // Check if the response indicates success
                    if (response.success) {
                        // Redirect to the login page after a successful logout
                        document.cookie = "rareentUser=; path=/; expires=Thu, 01 Jan 1970 00:00:00 UTC;";
                        document.cookie = "findUser=; path=/; expires=Thu, 01 Jan 1970 00:00:00 UTC;";
                        window.location.href = "/User/Login";
                    } else {
                        // Handle failure if any
                        console.error("Logout failed", response);
                        alert("Logout failed. Please try again.");
                    }
                }).fail(function (err) {
                    // Handle any errors during the logout process
                    console.error("Logout failed", err);
                    alert("Logout failed. Please try again.");
                });
            });



            const successMessage = '@TempData["SuccessMessage"]';
            const errorMessage = '@TempData["ErrorMessage"]';
            if (successMessage) {
                alertify.set('notifier', 'position', 'top-right');
                alertify.success(successMessage);
            }
            if (errorMessage) {
                alertify.set('notifier', 'position', 'top-right');
                alertify.error(successMessage);
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
