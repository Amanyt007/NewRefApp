@{
    ViewData["Title"] = "Dashboard";
    var plans = ViewBag.InvestmentPlans as IEnumerable<NewRefApp.Models.InvestmentPlan>;
    var categories = ViewBag.Categories as List<string>;
    var user = ViewBag.User as NewRefApp.Models.User;
    decimal balance = ViewBag.Balance ?? 0;
}

<div class="container mt-4 home">
    @*  <div class="card bg-dark text-white p-3 mb-4">
    <h3>Welcome, @user?.FullName</h3>
    <p>Your Balance: ₹@balance.ToString("F2")</p>
    </div> *@
    @if (user != null)
    {
        var catCount = 0;
        <div class="icon-grid d-flex justify-content-between">
            <div class="d-flex align-items-center gap-3">
                <div class="align-self-center">
                    <i class="fa-solid fa-user fahomeiconcolor" style="font-size: 30px;"></i>
                </div>
                <div class="d-flex flex-column">
                    <div>@user?.FullName</div>
                    <div>@user?.PhoneNumber</div>
                </div>
            </div>
            <div class="d-flex flex-column">
                <div>Your Balance</div>
                <div class="fw-bold">₹@((int)balance)</div>
            </div>
        </div>
        <div class="icon-grid py-2">
            <a class="nav-link text-dark" asp-area="" asp-controller="home" asp-action="Recharge">
                <div class="icon-item">
                    <i class="fa-solid fabgicon fa-plus"></i>
                    <div>Recharge</div>
                </div>
            </a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Withdraw" asp-action="WithdrawMoney">
                <div class="icon-item">
                    <i class="fa-solid fabgicon fa-wallet"></i>
                    <div>Withdraw</div>
                </div>
            </a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Withdraw" asp-action="WithdrawMoney">
                <div class="icon-item">
                    <i class="fa-solid fabgicon fa-user"></i>
                    <div>Customer Support</div>
                </div>
            </a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Withdraw" asp-action="WithdrawMoney">
                <div class="icon-item">
                    <i class="fa-solid fabgicon fa-paper-plane"></i>
                    <div>Channel</div>
                </div>
            </a>
        </div>
        @* Investment Plans Display *@
        <div>
            <div class="tab-wrapper">
                <div class="tabs mb-3 text-center">
                    @foreach (var category in categories)
                    {
                        if (catCount == 2)
                        {
                            break;
                        }
                        <button class="tab btn btn-outline-light mx-1 @(category == categories.First() ? "active" : "")" data-tab="@category">
                            @category
                        </button>
                        catCount++;
                    }
                </div>

                @foreach (var category in categories)
                {
                    <div class="tab-content @(category == categories.First() ? "active" : "")" id="@category" style="display: @(category == categories.First() ? "block" : "none");">
                        <div class="card p-3">
                            <h5 class="text-center text-dark">@category Plans</h5>
                            <div class="row row-cols-2 row-cols-md-2 row-cols-lg-3 g-4">
                                @foreach (var plan in plans.Where(p => p.Category == category))
                                {
                                    int duration = 0;
                                    if (!string.IsNullOrEmpty(plan.RevenueDurationValue))
                                    {
                                        var match = System.Text.RegularExpressions.Regex.Match(plan.RevenueDurationValue, @"\d+");
                                        if (match.Success)
                                        {
                                            duration = int.Parse(match.Value);
                                        }
                                    }

                                    var earningsPerUnit = plan.DailyEarningsPerUnit ?? plan.HourlyEarningsPerUnit ?? 0;
                                    var totalIncome = earningsPerUnit * duration;
                                    var maxInvestment = 100;

                                    <div class="col">
                                        <div class="card tile-card p-sm-3 p-2 shadow-sm">
                                            <div class="tile-header text-center p-2 rounded-top">
                                                <h5 class="plan-title mb-0">@plan.Name</h5>
                                            </div>
                                            <div class="tile-image text-center p-2">
                                                <img src="@plan.ImagePath" alt="Plan Image" class="img-fluid" style="max-height: 150px;">
                                            </div>
                                            <div class="tile-body p-2 pt-sm-2 pt-0">
                                                <div class="row justify-content-around">
                                                    <div class="tile-box col-6">
                                                        <div class="tile-value">₹@((int)plan.InvestmentAmount)</div>
                                                        <div class="tile-label">Price</div>
                                                    </div>
                                                    <div class="tile-box col-6">
                                                        <div class="tile-value">₹@((int)earningsPerUnit)</div>
                                                        <div class="tile-label">Daily Profit</div>
                                                    </div>
                                                    <div class="tile-box col-6">
                                                        <div class="tile-value">@plan.RevenueDurationValue @(plan.HourlyEarningsPerUnit.HasValue ? "Hour(s)" : "Day(s)")</div>
                                                        <div class="tile-label">Duration</div>
                                                    </div>
                                                    <div class="tile-box col-6">
                                                        <div class="tile-value">₹@((int)totalIncome)</div>
                                                        <div class="tile-label">Total Profit</div>
                                                    </div>
                                                </div>

                                                <button class="presale-btn invest-btn btn btn-pink mt-3 w-100 text-center"
                                                        data-id="@plan.Id"
                                                        data-name="@plan.Name"
                                                        data-amount="@plan.InvestmentAmount"
                                                        data-duration="@plan.RevenueDurationValue"
                                                        data-daily="@earningsPerUnit"
                                                        data-max="@maxInvestment"
                                                        data-toggle="modal"
                                                        data-target="#investModal">
                                                    Invest Now
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- Inviting Friends -->
        <div class="card my-3 bg-light text-dark shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Inviting friends</h5>
                <p class="card-text">Inviting friends to earn commissions</p>
                <a asp-controller="home" asp-action="invite" class="btn btn-greendark">Go →</a>
            </div>
        </div>

        <!-- Task Reward Top -->
        <div class="card mb-3 bg-warning-subtle text-dark shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Referral Earning</h5>
                <p class="card-text">Receive commission for completing tasks</p>
                <a asp-controller="home" asp-action="referrals" class="btn btn-greendark">Go →</a>
            </div>
        </div>

        <!-- My Team -->
        <div class="card mb-3 bg-info-subtle text-dark shadow-sm">
            <div class="card-body">
                <h5 class="card-title">My Team</h5>
                <p class="card-text">Build your own team and make more money</p>
                <a asp-controller="home" asp-action="TeamMembers" class="btn btn-greendark">Go →</a>
            </div>
        </div>
    }
    else
    {
        <p class="text-center mt-5">Please <a href="/User/login">log in</a> to see your details.</p>
    }
</div>

