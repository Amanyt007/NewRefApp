@model User

@{
    ViewData["Title"] = "My Referrals";
    var referralData = ViewBag.ReferralData as NewRefApp.Data.DTOs.ReferralDto;
}

<style>
    .referral-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 10px;
    }

    .referral-row td {
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
        vertical-align: middle;
    }

    .level-1 {
        background-color: #28a745;
        color: white;
    }

    .level-2 {
        background-color: #17a2b8;
        color: white;
    }

    .level-3 {
        background-color: #ffc107;
        color: black;
    }

    .referral-title {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .referral-data {
        font-size: 1.1rem;
        margin: 5px 0;
    }
</style>

<div class="container mt-4">
    <div class="card bg-dark text-white p-3 mb-3">
        <h5 class="text-center">My Referral Program</h5>
    </div>

    <div class="card bg-secondary text-white p-3">
        @if (Model != null && referralData != null)
        {
            <table class="referral-table">
                <tr class="referral-row">
                    <td class="level-1">
                        <div class="referral-title">Level 1 (Direct)</div>
                        <div class="referral-data"><strong>Rebate Amount:</strong> ₹@referralData.Level1.Rebate.ToString("F2")</div>
                        <div class="referral-data"><strong>Total Invites:</strong> @referralData.Level1.TotalInvites</div>
                        <div class="referral-data"><strong>Active Invites:</strong> @referralData.Level1.ActiveInvites</div>
                    </td>
                    <td class="level-2">
                        <div class="referral-title">Level 2</div>
                        <div class="referral-data"><strong>Rebate Amount:</strong> ₹@referralData.Level2.Rebate.ToString("F2")</div>
                        <div class="referral-data"><strong>Total Invites:</strong> @referralData.Level2.TotalInvites</div>
                        <div class="referral-data"><strong>Active Invites:</strong> @referralData.Level2.ActiveInvites</div>
                    </td>
                    <td class="level-3">
                        <div class="referral-title">Level 3</div>
                        <div class="referral-data"><strong>Rebate Amount:</strong> ₹@referralData.Level3.Rebate.ToString("F2")</div>
                        <div class="referral-data"><strong>Total Invites:</strong> @referralData.Level3.TotalInvites</div>
                        <div class="referral-data"><strong>Active Invites:</strong> @referralData.Level3.ActiveInvites</div>
                    </td>
                </tr>
            </table>
        }
        else
        {
            <p class="text-warning">No referral data available. Please ensure you are logged in.</p>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}