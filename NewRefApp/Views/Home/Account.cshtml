@model NewRefApp.Data.DTOs.BalanceDetailsDto;
@{
    ViewData["Title"] = "Dashboard";
    var data = ViewBag.UserData as NewRefApp.Data.DTOs.BalanceDetailsDto;
    var newUserId = "450" + data.userId;
}
<div class="container-fluid p-0">
    <div class="card bg-pink-gradient text-center text-white p-3 h1">
        Account
    </div>
</div>
<div class="container-fluid p-0">
    <!-- Profile Header -->
    <div class="position-relative text-white text-center" style="background: url('/images/a1.png'); background-size: cover; background-position: center; padding: 40px 0;">
        <div class="position-absolute top-0 start-0 p-3">
            <img src="/images/rareentLogo.jpg" class="rounded-circle border border-white" width="60" height="60" alt="Profile" />
        </div>
        @{
            if (data != null)
            {
                <div class="pt-3">
                    <div class="fs-6 fw-bolder">ID: @newUserId</div>
                    <span class="badge bg-pink rounded-pill">VIP @data.vipLevel</span>
                </div>

                <!-- 3 Cards -->
                <div class="container">
                <div class="row justify-content-around text-dark mt-4">
                    <div class="col-4">
                        <div class="bg-white p-3 rounded shadow-sm">
                            <div class="fs-5 fw-bold">₹@data.totalBalance.ToString("F0")</div>
                            <small>Balance</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="bg-white p-3 rounded shadow-sm">
                            <div class="fs-5 fw-bold">₹@data.earningBalance.ToString("F0")</div>
                            <small>Total income</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="bg-white p-3 rounded shadow-sm">
                            <div class="fs-5 fw-bold">₹@data.rechargeBalance.ToString("F0")</div>
                            <small>Recharge</small>
                        </div>
                    </div>
                </div>
                </div>
            }
        }

    </div>

    <!-- Pink Buttons Section -->
    <div class="container my-4">
        <div class="row g-3">
            <div class="col-sm-6">
                <a asp-controller="home" asp-action="AllTransactions" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
                    <i class="fas fa-file-invoice-dollar"></i> Financial details
                </a>
            </div>
            <div class="col-sm-6">
                <a asp-controller="Withdraw" asp-action="WithdrawMoney" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
                    <i class="fas fa-wallet"></i> Withdraw Money
                </a>
            </div>
            <div class="col-sm-6">
                <a asp-controller="Home" asp-action="MyInvestments" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
                    <i class="fas fa-box"></i> My products
                </a>
            </div>
            <div class="col-sm-6">
                <a asp-controller="Withdraw" asp-action="CreateAccount" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
                    <i class="fas fa-university"></i> Receiving account
                </a>
            </div>
            <div class="col-sm-6">
                <a asp-controller="home" asp-action="Transactions" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
                    <i class="fas fa-lock"></i> Deposit History
                </a>
            </div>
            <div class="col-sm-6">
                <a asp-controller="Withdraw" asp-action="WithdrawalHistory" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
                    <i class="fas fa-lock"></i> Withdraw History
                </a>
            </div>
            @*<div class="col-sm-6">
                <a asp-controller="Withdraw" asp-action="CreateAccount" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
                    <i class="fas fa-lock"></i> Password and Security
                </a>
            </div>*@
            
            <div class="col-sm-6">
                <a href="#" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
                    <i class="fas fa-info-circle"></i> About Us
                </a>
            </div>
            @* <div class="col-6">
            <a href="#" class="btn btn-pink w-100 d-flex align-items-center justify-content-between">
            <i class="fas fa-download"></i> Download
            </a>
            </div> *@
            <div class="col-sm-6">
                <a href="#" id="logout" class="btn btn-pink w-100 d-flex align-items-center justify-content-between text-white">
                    <span>Log out</span>
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>
