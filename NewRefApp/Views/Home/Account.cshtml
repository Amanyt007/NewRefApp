        <div class="position-absolute top-0 start-0 p-3">
            <img src="/images/profile.jpg" class="rounded-circle border border-white" width="60" height="60" alt="Profile" />
        </div>
        <div class="pt-3">
            <div class="fs-6">ID: 7309GP77</div>
            <span class="badge bg-primary rounded-pill">VIP0</span>
        </div>

        <!-- 3 Cards -->
        <div class="d-flex justify-content-around text-dark mt-4">
            <div class="bg-white p-3 rounded shadow-sm w-25">
                <div class="fs-5 fw-bold">₹ 0.00</div>
                <small>Balance</small>
            </div>
            <div class="bg-white p-3 rounded shadow-sm w-25">
                <div class="fs-5 fw-bold">₹ 0.00</div>
