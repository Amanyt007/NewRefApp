@model NewRefApp.Data.DTOs.UserTransactionsViewModel

<div class="container mt-4">
    <div class="card bg-dark text-white p-3 mb-3">
        <h5>All Transactions</h5>
        <p>Current Balance: ₹@Model.UserBalance</p>
    </div>

    <div class="card bg-secondary text-white p-3">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Amount</th>
                    <th>Date</th>
                    @* <th>Details</th> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var tx in Model.Transactions)
                {
                    <tr>
                        <td>@tx.TransactionType</td>
                        <td>@tx.DetailsLink ₹@tx.Amount</td>
                        <td>@tx.TransactionDate.ToString("dd-MM-yyyy HH:mm")</td>
                        @* <td>
                            @if (!string.IsNullOrEmpty(tx.DetailsLink))
                            {
                                <a href="@tx.DetailsLink" class="btn btn-info btn-sm">View</a>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td> *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
