@model IEnumerable<Deposit>

@{
    ViewData["Title"] = "Transaction Details";
}
<div class="container-fluid p-0">
    <div class="card bg-pink-gradient text-center text-white p-3 h1">
        Deposit History
    </div>
</div>
<div class="container mt-4">
   @*  <div class="card bg-dark text-white p-3 mb-3">
        <h5>Transaction History</h5>
    </div> *@

    <div class="recharge-card color-darkBlue p-3">
        <h4>Your Transactions</h4>
        @if (Model.Any())
        {
            <table class="table table-info table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User Name</th>
                        <th>Amount</th>
                        <th>Payment Type</th>
                        <th>Status</th>
                        <th>Date</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.User.FullName</td>
                            <td>₹@item.Amount</td>
                            <td>@(item.PaymentType == 0 ? "UPI" : "BankTransfer")</td>
                            <td>
                                @if (item.Status == 0)
                                {
                                    <span class="badge bg-warning"><i class="fas fa-clock"></i> Pending</span>
                                }
                                else if (item.Status == 1)
                                {
                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> Completed</span>
                                }
                                else if (item.Status == 2)
                                {
                                    <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Failed</span>
                                }
                            </td>
                            <td>@item.Date.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td><a asp-action="TransactionDetail" asp-route-id="@item.Id" class="btn btn-greendark btn-sm">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-warning">No transactions found.</p>
        }
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}

<style>
    .table-dark {
        color: #eee;
    }
    .badge {
        display: flex;
        align-items: center;
        gap: 5px;
    }
    .bg-warning {
        background-color: #ffc107 !important;
    }
    .bg-success {
        background-color: #28a745 !important;
    }
    .bg-danger {
        background-color: #dc3545 !important;
    }
</style>